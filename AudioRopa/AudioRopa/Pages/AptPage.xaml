<Page x:Class="AudioRopa.Pages.AptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AudioRopa.Pages"
      xmlns:view="clr-namespace:AudioRopa.View"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AptPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <view:AptSection1 Grid.Column="0" x:Name="AptConnector" Margin="0,0,0,0" ClipToBounds="True"/>
        <view:AptSection2 Grid.Column="1" x:Name="AptSettings" Margin="0,0,0,0" ClipToBounds="True" Visibility="Collapsed"/>
        <view:AptSection3 Grid.Column="2" x:Name="QrCodePanel" Margin="0,0,0,0" ClipToBounds="True" Visibility="Collapsed"/>
    </Grid>
</Page>
