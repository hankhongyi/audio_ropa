<Page x:Class="AudioRopa.Pages.DeviceSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AudioRopa.Pages"
      xmlns:properties="clr-namespace:AudioRopa.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="DeviceSelectionPage">
    <Grid>
        <Border Background="{StaticResource DarkBackgroundBrush}"
                CornerRadius="8"
                Width="600"
                Height="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="30">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <!-- First Device Button -->
                <Button Style="{StaticResource RoundedSquareButton}"
                        Width="180"
                        Height="160"
                        Content="{x:Static properties:Resources.APTDeviceText}"
                        Click="Device1Button_Click"
                        Margin="10,10,20,0"/>
                
                <!-- Second Device Button -->
                <Button Style="{StaticResource RoundedSquareButton}"
                        Width="180"
                        Height="160"
                        Content="{x:Static properties:Resources.APRDeviceText}"
                        Click="Device2Button_Click"
                        Margin="20,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
