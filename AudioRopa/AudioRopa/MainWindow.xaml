<Window x:Class="AudioRopa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioRopa"
        xmlns:pages="clr-namespace:AudioRopa.Pages"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource PrimaryBlackBrush}"
        Title="AudioRopa" Height="720" Width="1380">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="BlackCircle" Source="/Images/audio_ropa_logo.png" Margin="10,10,0,10"
                       Width="300" Height="70" HorizontalAlignment="Left" Visibility="Visible" Stretch="UniformToFill"/>
        <!-- Main Content -->
        <DockPanel x:Name="MainDockPanel" Grid.Row="2">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Visible"
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="0,0,0,0">
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden">
                        <Frame.Content>
                            <pages:NoConnectionPage />
                        </Frame.Content>
                    </Frame>
                </ScrollViewer>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
