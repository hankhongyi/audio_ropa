<UserControl x:Class="AudioRopa.View.AprSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioRopa.View"
             xmlns:custom="clr-namespace:AudioRopa.Custom"
             xmlns:properties="clr-namespace:AudioRopa.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="8" Margin="0,0,0,0" Background="{StaticResource DarkBackgroundBrush}">
            <Grid Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                          Text="{x:Static properties:Resources.AuracastPriority}"
                          Style="{StaticResource TitleItalicTextStyle}"/>

                <Grid Grid.Row="1" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{x:Static properties:Resources.Port}"
                               Style="{StaticResource InfoTextBlockStyle}"/>
                    <ComboBox Grid.Column="1" x:Name="PortComboBox" 
                              Width="120"
                              Margin="20,0,0,0"
                              Foreground="Black"
                              Background="White">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.Resources>
                            <SolidColorBrush x:Key="ComboBox.Static.Glyph" Color="Black"/>
                            <SolidColorBrush x:Key="ComboBox.MouseOver.Glyph" Color="Black"/>
                            <SolidColorBrush x:Key="ComboBox.Pressed.Glyph" Color="Black"/>
                            <SolidColorBrush x:Key="ComboBox.Disabled.Glyph" Color="#555555"/>
                        </ComboBox.Resources>
                    </ComboBox>
                </Grid>

                <!-- Auracast Channel Name -->
                <TextBlock Grid.Row="2" Margin="0,20,0,0"
                               Text="{x:Static properties:Resources.AuracastChannelName}"
                               Style="{StaticResource InfoTextBlockStyle}"/>

                <TextBox Grid.Row="3" x:Name="AuracastChannelNameInput" Margin="0,8,0,0"
                         Style="{StaticResource GrayTextBoxStyle}"/>

                <!-- Password -->
                <TextBlock Grid.Row="4" Margin="0,20,0,0"
                               Text="{x:Static properties:Resources.PasswordTitle}"
                               Style="{StaticResource InfoTextBlockStyle}"/>

                <TextBox Grid.Row="5" x:Name="AuracastPasswordInput" Margin="0,8,0,0"
                         Style="{StaticResource GrayTextBoxStyle}"/>
                
                <!-- Save Data Button -->
                <custom:CustomButton Grid.Row="6" Margin="0,20,0,0"
                                     Title="{x:Static properties:Resources.SaveData}" Click="OnSaveDataClick"/>

                <!-- Paste Data Button -->
                <custom:CustomButton Grid.Row="7" Margin="0,20,0,0"
                                     Title="{x:Static properties:Resources.PasteData}" Click="OnPasteDataClick"/>

                <custom:CustomRedButton Grid.Row="8" x:Name="TransterButton"
                                        Height="45"
                                        Margin="0,45,0,0"
                                        ButtonText="{x:Static properties:Resources.Transfer}"
                                        Click="OnTransferClicked"/>

                <custom:CustomAccentButton Grid.Row="9" x:Name="ReturnHomeButton"
                                        Height="45"
                                        Margin="0,25,0,0"
                                        ButtonText="{x:Static properties:Resources.ReturnToHomepage}"
                                        Click="OnReturnHomeClicked"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
