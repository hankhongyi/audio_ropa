<UserControl x:Class="AudioRopa.View.AptInfoSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioRopa.View"
             xmlns:custom="clr-namespace:AudioRopa.Custom"
             xmlns:properties="clr-namespace:AudioRopa.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="8" Margin="0,0,0,0" Background="{StaticResource DarkBackgroundBrush}">
            <Grid Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                          Text="{x:Static properties:Resources.AuracastInfoSetting}"
                          Style="{StaticResource TitleItalicTextStyle}"/>

                <!-- Auracast Channel Name -->
                <TextBlock Grid.Row="1" Margin="0,30,0,0"
                               Text="{x:Static properties:Resources.AuracastChannelName}"
                               Style="{StaticResource InfoTextBlockStyle}"/>

                <TextBox Grid.Row="2" x:Name="AuracastChannelNameInput" Margin="0,8,0,0"
                         Style="{StaticResource GrayTextBoxStyle}"/>

                <!-- Password -->
                <TextBlock Grid.Row="3" Margin="0,20,0,0"
                               Text="{x:Static properties:Resources.PasswordTitle}"
                               Style="{StaticResource InfoTextBlockStyle}"/>

                <TextBox Grid.Row="4" x:Name="AuracastPasswordInput" Margin="0,8,0,0"
                         Style="{StaticResource GrayTextBoxStyle}"/>


                <!-- Transmission Quality -->
                <TextBlock Grid.Row="5" Margin="0,20,0,0"
                               Text="{x:Static properties:Resources.TransmissionQualityTitle}"
                               Style="{StaticResource InfoTextBlockStyle}"/>

                <TextBox Grid.Row="6" x:Name="AuracastTransmissionQualityInput" Margin="0,8,0,0"
                         Style="{StaticResource GrayTextBoxStyle}"/>
                
                <!-- AGC Control -->
                <local:AgcControl Grid.Row="7" x:Name="AGCControl" Margin="0,20,0,0"/>

                <Grid Grid.Row="8" Margin="25,30,25,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{x:Static properties:Resources._0dBm}"
                               Style="{StaticResource InfoTextBlockStyle}"/>
                    <TextBlock Grid.Column="1"
                               Text="{x:Static properties:Resources.TXPower}"
                               HorizontalAlignment="Center"
                               Style="{StaticResource InfoTextBlockStyle}"/>
                    <TextBlock Grid.Column="2"
                               Text="{x:Static properties:Resources._20dBm}"
                               HorizontalAlignment="Right"
                               Style="{StaticResource InfoTextBlockStyle}"/>
                </Grid>
                <TextBlock Grid.Row="9" Margin="25,10,25,0"
                               Text="|"
                               HorizontalAlignment="Center"
                               Style="{StaticResource SmallNormalTextBlockStyle}"/>
                <!-- TX Power Slider -->
                <Grid Grid.Row="10" Margin="25,5,25,0">
                    <!-- Slider Container -->
                    <Grid>
                        <!-- Background Track (Orange) -->
                        <Rectangle x:Name="BackgroundTrack2"
                              Fill="{StaticResource LightRedBrush}"
                              Height="6"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              RadiusX="3"
                              RadiusY="3"/>

                        <!-- Progress Track (White) -->
                        <Rectangle x:Name="ProgressTrack"
                              Fill="White"
                              Height="6"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              RadiusX="3"
                              RadiusY="3"
                              Width="200"/>

                        <!-- Progress Indicator Square -->
                        <Border x:Name="ProgressIndicator"
                            Width="27"
                            Height="15"
                            CornerRadius="3"
                            Background="{StaticResource LightRedBrush}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="0,-18,0,0">
                            <TextBlock x:Name="ProgressText"
                                   Text="5"
                                   Foreground="White"
                                   FontSize="{DynamicResource FontSize10}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <!-- Slider (Transparent) -->
                        <Slider x:Name="AGCSlider"
                            Minimum="0"
                            Maximum="20"
                            Value="10"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Height="12"
                            Background="Transparent"
                            ValueChanged="AGCSlider_ValueChanged"
                            PreviewMouseUp="AGCSlider_MouseUp"
                            SizeChanged="AGCSlider_SizeChanged">
                            <Slider.Style>
                                <Style TargetType="Slider">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid>
                                                    <Track x:Name="PART_Track">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Style="{StaticResource SliderButtonStyle}" Command="Slider.DecreaseLarge"/>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb Style="{StaticResource SliderThumbStyle}" Height="12" Width="12"/>
                                                        </Track.Thumb>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Style="{StaticResource SliderButtonStyle}" Command="Slider.IncreaseLarge"/>
                                                        </Track.IncreaseRepeatButton>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Slider.Style>
                        </Slider>
                    </Grid>
                </Grid>
                <TextBlock Grid.Row="11" Margin="25,5,25,0"
                               Text="|"
                               HorizontalAlignment="Center"
                               Style="{StaticResource SmallNormalTextBlockStyle}"/>

                <custom:CustomRedButton Grid.Row="12" x:Name="UpdateButton"
                                        Height="45"
                                        Margin="0,25,0,0"
                                        ButtonText="{x:Static properties:Resources.Update}"
                                        Click="OnUpdagteClicked"/>

                <custom:CustomAccentButton Grid.Row="13" x:Name="CancelButton"
                                        Height="45"
                                        Margin="0,25,0,0"
                                        ButtonText="{x:Static properties:Resources.Cancel}"
                                        Click="OnCancelClicked"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
