<UserControl x:Class="AudioRopa.View.AprTransfer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioRopa.View"
             xmlns:custom="clr-namespace:AudioRopa.Custom"
             xmlns:properties="clr-namespace:AudioRopa.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="8" Margin="0,0,0,0" Background="{StaticResource DarkBackgroundBrush}">
            <Grid Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="0,5,0,0"
                          Text="{x:Static properties:Resources.AprTransferSsentence1}"
                          Style="{StaticResource NormalTextBlockStyle}"/>
                <TextBlock Grid.Row="1" Margin="0,15,0,0"
                          Text="{x:Static properties:Resources.AprTransferSsentence2}"
                          Style="{StaticResource NormalTextBlockStyle}"/>
                <TextBlock Grid.Row="2" Margin="0,15,0,0"
                          Text="{x:Static properties:Resources.AprTransferSsentence3}"
                          Style="{StaticResource NormalTextBlockStyle}"/>
                <TextBlock Grid.Row="3" Margin="0,15,0,0"
                          Text="{x:Static properties:Resources.AprTransferSsentence4}"
                          Style="{StaticResource NormalTextBlockStyle}"/>

                <Grid Grid.Row="4" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Text="{x:Static properties:Resources.Port}"
                               Style="{StaticResource InfoTextBlockStyle}"/>
                    <ComboBox Grid.Column="1" x:Name="PortComboBox" 
                              Width="120"
                              Height="30"
                              Margin="10,0,0,0"
                              VerticalContentAlignment="Center"
                              Style="{StaticResource WhiteComboBoxStyle}"
                              ItemContainerStyle="{StaticResource BlackTextComboBoxItemStyle}"/>
                </Grid>
                <TextBlock Grid.Row="5" Margin="0,10,0,0"
                          Text="{x:Static properties:Resources.PortDescription}"
                          Style="{StaticResource SmallTextBlockStyle}"/>

                <StackPanel Grid.Row="6" Height="50"/>

                <TextBlock Grid.Row="7" x:Name="TransferStatusText"
                          Style="{StaticResource SmallInfoTextBlockStyle}"/>

                <custom:CustomRedButton Grid.Row="8" x:Name="ConnectButton"
                                        Height="45"
                                        Margin="0,15,0,0"
                                        ButtonText="{x:Static properties:Resources.Transfer}"
                                        Click="OnTransferClicked"/>

                <custom:CustomAccentButton Grid.Row="9" x:Name="CancelButton"
                                           Height="45"
                                           Margin="0,25,0,0"
                                           ButtonText="{x:Static properties:Resources.Cancel}"
                                           Click="OnCancelClicked"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
