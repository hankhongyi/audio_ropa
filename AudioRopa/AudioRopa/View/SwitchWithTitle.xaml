<UserControl x:Class="AudioRopa.View.SwitchWithTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioRopa.View"
             xmlns:custom="clr-namespace:AudioRopa.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Border CornerRadius="8" Margin="0,0,0,0">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/panel_bg_small.png" Stretch="Fill"/>
        </Border.Background>
        <Grid>
            <Grid Margin="10,15,10,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                              x:Name="TitleTextBlock"
                              Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              Style="{StaticResource InfoTextBlockStyle}"
                              Margin="10,0,10,0"/>
                    <Image Grid.Column="1" x:Name="InfoIcon"
                           Source="{Binding InfoIconSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Width="20"
                           Height="20"
                           Margin="0,0,0,0"
                           Cursor="Hand"
                           MouseLeftButtonDown="InfoIcon_Click"
                           ToolTip="{Binding InfoToolTip, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </Grid>
                <custom:SwitchButton x:Name="Switch"
                                     Grid.Column="1"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Center"
                                     Margin="10,0,10,0"
                                     StateChanged="SwitchButton_StateChanged"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
