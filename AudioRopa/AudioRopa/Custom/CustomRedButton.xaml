<UserControl x:Class="AudioRopa.Custom.CustomRedButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioRopa.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Button x:Name="MainButton"
            Click="MainButton_Click"
            BorderThickness="0"
            Cursor="Hand"
            Height="{Binding Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Width="{Binding Width, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Grid>
                    <!-- Rounded Border with AccentColor Background -->
                    <Border x:Name="ButtonBorder"
                            Background="{DynamicResource AccentBrush}"
                            BorderThickness="0"
                            CornerRadius="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        
                        <!-- Text in the center -->
                        <TextBlock x:Name="ButtonText"
                                   Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Button'}"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"/>
                    </Border>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter TargetName="ButtonText" Property="Foreground" Value="Black"/>
                        <Setter TargetName="ButtonBorder" Property="Background" Value="Gray"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource LightRedBrush}"/>
                        <Setter TargetName="ButtonText" Property="Opacity" Value="0.9"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource LightRedBrush}"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
