<UserControl x:Class="AudioRopa.Custom.CustomRedButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioRopa.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Button x:Name="MainButton"
            Click="MainButton_Click"
            BorderThickness="0"
            Cursor="Hand"
            Height="{Binding Height, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Width="{Binding Width, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Grid>
                    <!-- Background Image -->
                    <Image Source="/Images/horizontal_selected.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"/>

                    <!-- Text in the center -->
                    <TextBlock x:Name="ButtonText"
                               Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Button'}"
                               Foreground="White"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                </Grid>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter TargetName="ButtonText" Property="Foreground" Value="Gray"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter TargetName="ButtonText" Property="Opacity" Value="0.7"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="ButtonText" Property="Opacity" Value="0.9"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
