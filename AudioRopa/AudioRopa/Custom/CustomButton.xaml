<UserControl x:Class="AudioRopa.Custom.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:AudioRopa.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Cursor="Hand">
    <Border CornerRadius="8" Margin="0,0,0,0">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/panel_bg_small.png" Stretch="Fill"/>
        </Border.Background>
        <Grid>
            <TextBlock
                x:Name="ButtonTitle"
                Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource InfoTextBlockStyle}"
                Margin="10,15,10,15"/>
        </Grid>
    </Border>
</UserControl>
